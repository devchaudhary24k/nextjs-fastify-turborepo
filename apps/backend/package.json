    "@scalar/fastify-api-reference": "^1.31.14",
    "fastify": "^5.4.0",
    "fastify-metrics": "^12.1.0",
    "fastify-plugin": "^5.0.1",
    "nanoid": "^5.1.5",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.0.3"
  }
}
